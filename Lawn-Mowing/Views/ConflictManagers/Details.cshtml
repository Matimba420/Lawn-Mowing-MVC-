@model Lawn_Mowing.Models.Booking

<h2>Booking Details</h2>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer.Name</dd> 
        <dt class="col-sm-2">Machine</dt>
        <dd class="col-sm-10">@Model.Machine.Name</dd> 
        <dt class="col-sm-2">Operator</dt>
        <dd class="col-sm-10">@Model.Operator.Name</dd>
        <dt class="col-sm-2">Booking Date</dt>
        <dd class="col-sm-10">@Model.BookingDate.ToString("g")</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-primary">Back to Conflict Managers</a>
