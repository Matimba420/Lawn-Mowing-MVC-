@model Lawn_Mowing.Models.Booking

<h2>Conflict Manager</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <p>@ViewBag.Message</p>
}

<div>
    <h4>Booking Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">
            @Model.CustomerId 
        </dd>
        <dt class="col-sm-2">Machine</dt>
        <dd class="col-sm-10">
            @Model.MachineId 
        </dd>
        <dt class="col-sm-2">Operator</dt>
        <dd class="col-sm-10">
            @Model.OperatorId 
        </dd>
        <dt class="col-sm-2">Booking Date</dt>
        <dd class="col-sm-10">@Model.BookingDate.ToString("g")</dd> <!-- Formatting the date -->
    </dl>
</div>

<a asp-controller="Operators" asp-action="Create" class="btn btn-success">Notify new Operator</a>

