@model IEnumerable<Lawn_Mowing.Models.Booking>

<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Operator Name</th>
            <th>Machine Name</th>
            <th>Booking Date</th>
            <th>Duration (Hours)</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Customer.Name</td>
                <td>@booking.Operator.Name</td>
                <td>@booking.Machine.Name</td>
                <td>@booking.BookingDate.ToShortDateString()</td>
                <td>@booking.DurationInHours</td>
                <td>@booking.Status</td>
            </tr>
        }
    </tbody>
</table>
